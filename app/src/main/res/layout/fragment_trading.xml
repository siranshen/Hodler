<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.illegalsimon.hodler.TradingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp">

        <TextView
            android:id="@+id/tv_trade_pair_label"
            style="@style/BaseTradingLabelStyle"
            android:text="trading pair"/>

        <Spinner
            android:id="@+id/spinner_trade_pair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tv_order_type_label"
            style="@style/BaseTradingLabelStyle"
            android:text="order type"/>

        <Spinner
            android:id="@+id/spinner_order_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"/>

        <TextView
            android:id="@+id/tv_price_label"
            style="@style/BaseTradingLabelStyle"
            android:text="price"/>

        <EditText
            android:id="@+id/et_price"
            style="@style/BaseTradingEditTextStyle"/>

        <TextView
            android:id="@+id/tv_quantity_label"
            style="@style/BaseTradingLabelStyle"
            android:text="quantity"/>

        <EditText
            android:id="@+id/et_quantity"
            style="@style/BaseTradingEditTextStyle"/>

        <TextView
            android:id="@+id/tv_total_label"
            style="@style/BaseTradingLabelStyle"
            android:text="total"/>

        <EditText
            android:id="@+id/et_total"
            style="@style/BaseTradingEditTextStyle"/>

        <Button
            android:id="@+id/btn_place_order"
            style="@style/BaseButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginTop="35dp"
            android:text="Place Order"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <Button
                android:id="@+id/btn_gemini_order_book"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@drawable/custom_button"
                android:text="Gemini order book"/>

            <Button
                android:id="@+id/btn_open_orders"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="13sp"
                android:textColor="@drawable/custom_button"
                android:text="My open orders"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>

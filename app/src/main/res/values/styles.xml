<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TimeRangeButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@drawable/custom_radio_button</item>
    </style>

    <style name="BaseButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/text_color_with_disabled</item>
        <item name="android:textSize">18sp</item>
        <item name="android:background">@drawable/trade_button</item>
    </style>

    <style name="BaseToolbarStyle">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="BaseLabelStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFeatureSettings">smcp</item>
    </style>

    <style name="BaseTradingEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:colorAccent">@color/colorTopaz</item>
        <item name="android:inputType">numberDecimal</item>
        <item name="android:paddingTop">6dp</item>
    </style>

    <style name="CustomAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/colorWhite</item> <!-- title and text -->
        <item name="android:colorAccent">@color/colorTopaz</item> <!-- button -->
        <item name="android:background">#131313</item>
    </style>

    <style name="BaseDashboardLineItemStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorLightGray</item>
        <item name="android:textSize">17sp</item>
    </style>

</resources>
